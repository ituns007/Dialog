<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Show Tips"
        android:textColor="#FFFFFF"
        android:onClick="clickTips"
        android:background="@color/purple_500"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Show Progress"
        android:textColor="#FFFFFF"
        android:onClick="clickProgress"
        android:background="@color/purple_500"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Show Confirm"
        android:textColor="#FFFFFF"
        android:onClick="clickConfirm"
        android:background="@color/purple_500"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Show Input"
        android:textColor="#FFFFFF"
        android:onClick="clickInput"
        android:background="@color/purple_500"/>
</LinearLayout>